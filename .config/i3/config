bindsym XF86MonBrightnessDown exec xbacklight -dec 10, exec --no-startup-id notify-send -t 1 -h int:value:$(xbacklight) "Backlight:"

bindsym XF86Display exec --no-startup-id /usr/local/bin/displayconfig.sh
